@inherits LayoutComponentBase

<MudThemeProvider Theme="theme"/>
<MudSnackbarProvider/>

<MudLayout>
    <MudMainContent>
        <MudContainer>
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code{
    private MudTheme theme = new()
    {
        Typography = new Typography()
        {
            Default = new DefaultTypography()
            {
                FontFamily = ["Ubuntu", "sans - serif"],
            }
        }
    };
}