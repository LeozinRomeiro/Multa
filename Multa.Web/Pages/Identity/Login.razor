@page "/login"
@using System.ComponentModel.DataAnnotations
@layout LoginLayout
@inherits LoginPage

<PageTitle>Entrar</PageTitle>

<MudGrid Justify="Justify.Center" >
    <MudItem xs="12" sm="12" md="8" lg="6" xl="6" xxl="6">
        @* <MudPaper Class="mud-width-full"> *@
        <MudPaper Class="pa-8 embacado">
            <div class="d-flex justify-center">
                <img src="imgs/multa-logo-1024Por500.PNG" alt="logo principal" width="250" />
            </div>
            <EditForm Model="InputModel" OnValidSubmit="OnValidSubmitAsync">
                <MudTextField T="string"
                              Label="E-mail"
                              HelperText="Campo obrigatório"
                              InputType="InputType.Email"
                              For="@(() => InputModel.Email)"
                              @bind-Value="InputModel.Email" />

                <MudTextField T="string"
                              Label="Senha"
                              HelperText="Campo obrigatório"
                              InputType="InputType.Password"
                              For="@(() => InputModel.Password)"
                              @bind-Value="InputModel.Password" />
            </EditForm>

            <div class="d-flex mt-8">
                @if (IsBusy)
                {
                    <MudProgressCircular Color="Color.Info" Indeterminate="true" />
                }
                else
                {
                    <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary">
                        Entrar
                    </MudButton>
                    <MudSpacer></MudSpacer>
                    <MudButton Href="/esqueci" Variant="Variant.Filled" Color="Color.Dark">
                        Esqueci a senha
                    </MudButton>
                }
            </div>
        </MudPaper>
    </MudItem>
</MudGrid>
